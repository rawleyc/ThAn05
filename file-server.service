[Unit]
Description=Flask File Server
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/telegram-file-bot
Environment=FILES_DIR=/home/ubuntu/telegram-file-bot/files
ExecStart=/usr/local/bin/gunicorn -w 4 -b 0.0.0.0:8080 server:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target 